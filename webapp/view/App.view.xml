<mvc:View
	height="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    controllerName="cities.controller.app">
	
	<List headerText="Cities of The World"
		  items="{/cities}"
		  growing="true"
		  growingThreshold="20"
		  growingScrollToLoad="true">
		  <StandardListItem
			title="{name}"
			info="{country}"
			description="{description}"
			/>
	</List>

</mvc:View>